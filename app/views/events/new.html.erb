<h1>Add New Event!</h1>

<%= form_for(@event) do |f| %>
	<%= f.text_field :name, placeholder: "Name" %><br/>
	<%= f.text_field :location , placeholder: "Location" %><br/>
	<%= f.datetime_select :when , placeholder: "Date and Time" %><br/>
	<%= f.text_field :description , placeholder: "Description" %><br/>
	<%= f.text_field :image , placeholder: "Insert Image Url" %><br/>
<!-- 	<%= f.text_field :contact_phone , placeholder: "Contact Phone" %><br/>
	<%= f.text_field :contact_email , placeholder: "Contact Email" %><br/> -->
	<%= f.submit %>

<% end %>