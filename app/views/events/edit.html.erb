<div class="addNewPage">


<%= form_for(@event) do |f| %>
<div class="formAddEventTile">
	<div class="addEventInput">
		<h1 id="addEventTitle">Edit <%= @event.name %></h1>
			<%= f.text_field :name, placeholder: "Name" %><br/>
			<%= f.text_field :location , placeholder: "Location" %><br/>
			<%= f.text_field :when , placeholder: "When" %><br/>
			<%= f.text_field :description , placeholder: "Description" %><br/>
			<%= f.text_field :image , placeholder: "Main Image" %><br/>
			<%= f.text_field :contact_phone , placeholder: "Contact Phone" %><br/>
			<%= f.text_field :contact_email , placeholder: "Contact Email" %><br/>
			<%= link_to 'Back', events_path, :class => "btn btn-primary" %>
			<%= f.submit  :class => "btn btn-success" %>
			<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>

	</div>
</div>

<% end %>
</div>