<h1>Edit your profile</h1>

<%= form_for(@user) do |f| %>

	<%= f.text_field :name, placeholder: 'Update Name'%>
	<%= f.text_field :email, placeholder: 'Update Email'%>
	<%= f.text_field :password, placeholder: 'Update Password'%>
	<%= f.text_field :password_confirmation, placeholder: 'Confirm New Password'%>
	<%= f.submit %>

	<%= link_to 'Delete You Account', @user, method: :delete, data: { confirm: 'Are you sure?' } %> 

<% end %>